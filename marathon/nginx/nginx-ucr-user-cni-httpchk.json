{
  "id": "/nginx/ucr/user/cni/httpchk",
  "instances": 2,
  "cpus": 0.01,
  "mem": 32,
  "cmd": "env | sort && nginx -g \"daemon off;\"",
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "nginx:alpine"
    }
  },
  "ipAddress": {
    "networkName": "dcos",
    "discovery": {
      "ports": [
        {
          "number": 80,
          "name": "http",
          "protocol": "tcp",
          "labels": {
            "VIP_0": "/nginx.ucr.user.cni.httpchk:80"
          }
        }
      ]
    }
  },
  "healthChecks": [
    {
      "protocol": "MESOS_HTTP",
      "path": "/",
      "port": 80,
      "gracePeriodSeconds": 20,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_VHOST": "vhost.example.com",
    "HAPROXY_0_PATH": "/nginx/ucr/user/cni/httpchk",
    "HAPROXY_0_HTTP_BACKEND_PROXYPASS_PATH": "/nginx/ucr/user/cni/httpchk"
  }
}
