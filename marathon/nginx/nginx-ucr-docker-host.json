{
  "id": "/nginx-ucr-docker-host",
  "instances": 2,
  "cpus": 0.01,
  "mem": 32,
  "cmd": "env | sort && sed -i \"s/80/$PORT0/g\" /etc/nginx/conf.d/default.conf && nginx -g \"daemon off;\"",
  "container": {
    "docker": {
    "type": "MESOS",
      "image": "nginx:alpine",
      "network": "HOST"
    }
  },
  "portDefinitions": [
    {
      "port": 0,
      "protocol": "tcp",
      "name": "nginx",
      "labels": { "VIP_0": "/nginx-ucr-docker-host:80" }
    }
  ],
  "healthChecks": [
    {
      "gracePeriodSeconds": 15,
      "ignoreHttp1xx": false,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 20
    }
  ],
  "labels": {
    "HAPROXY_0_VHOST": "<vhost.example.com>",
    "HAPROXY_GROUP": "external"
  }
}
