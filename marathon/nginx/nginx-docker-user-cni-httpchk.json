{
  "id": "/nginx-docker-user-cni-httpchk",
  "instances": 2,
  "cpus": 0.01,
  "mem": 32,
  "cmd": "env | sort && nginx -g \"daemon off;\"",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "nginx:alpine",
      "network": "USER"
    },
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 0,
        "name": "http",
        "protocol": "tcp"
      }
    ]
  },
  "ipAddress": {
    "networkName": "dcos"
  },
  "healthChecks": [
    {
      "protocol": "MESOS_HTTP",
      "path": "/",
      "port": 80,
      "gracePeriodSeconds": 20,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "HAPROXY_0_VHOST": "<vhost.example.com>",
    "HAPROXY_GROUP": "external"
  }
}
