{
  "id": "/dcos/grafana/grafana",
  "instances": 1,
  "cpus": 2,
  "mem": 4096,
  "cmd": "export GF_SERVER_HTTP_PORT=${PORT_HTTP} && /run.sh",
  "container": {
    "docker": {
      "image": "grafana/grafana:5.1.0"
    },
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/var/lib/grafana",
        "external": {
          "name": "dcos-grafana-grafana",
          "provider": "dvdi",
          "options": {
            "dvdi/driver": "rexray"
          }
        },
        "mode": "RW"
      }
    ]
  },
  "env": {
    "GF_INSTALL_PLUGINS": "",
    "GF_SECURITY_ADMIN_PASSWORD": "GrafanaMesos",
    "GF_SERVER_ROOT_URL": "%(protocol)s://%(domain)s:/dcos/grafana/grafana"
  },
  "labels": {
    "MARATHON_SINGLE_INSTANCE_APP": "true",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
    "HAPROXY_0_VHOST": "vhost.example.com",
    "HAPROXY_0_PATH": "/dcos/grafana/grafana",
    "HAPROXY_0_HTTP_BACKEND_PROXYPASS_PATH": "/dcos/grafana/grafana"
  },
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "port": 0,
      "protocol": "tcp",
      "name": "http",
      "labels": {
        "VIP_0": "/dcos/grafana/grafana:3000"
      }
    }
  ],
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "curl -fsS --head http://${HOST}:${PORT_HTTP}/ >/dev/null 2>&1"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 20,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "maximumOverCapacity": 0,
    "minimumHealthCapacity": 0
  },
  "unreachableStrategy": {
    "expungeAfterSeconds": 0,
    "inactiveAfterSeconds": 0
  }
}
